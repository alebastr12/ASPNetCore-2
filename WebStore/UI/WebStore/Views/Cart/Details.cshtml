@model OrderDetailsViewModel
@{
    ViewBag.Title = "Заказы";
    var TotalSum = Model.Cart.Items?.Sum(i => i.Value * i.Key.Price)??0;
    
}

<section id="cart_items">
    <div class="container">
        
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cart.Items)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="~/images/shop/@item.Key.ImageUrl" alt=""></a>
                            </td>
                            <td class="cart_description">
                                <h4><a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@item.Key.Id">
                                    @item.Key.Name</a></h4>
                                <p>Web ID: 1089772</p>
                            </td>
                            <td class="cart_price">
                                <p>@item.Key.Price.ToString("C")</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a asp-controller="Cart"
                                       asp-action="AddToCart"
                                       asp-route-id="@item.Key.Id"
                                       asp-route-returnUrl="@Context.Request.Path"
                                       class="cart_quantity_up">
                                        +
                                    </a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="@item.Value" autocomplete="off" size="2">
                                    <a class="cart_quantity_down" 
                                       asp-controller="Cart" 
                                       asp-action="DecrementFromCart" 
                                       asp-route-id="@item.Key.Id"> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price">@((item.Key.Price*item.Value).ToString("C"))</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" 
                                   asp-controller="Cart"
                                   asp-action="RemoveFromCart"
                                   asp-route-id="@item.Key.Id"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->

