
@{
    ViewBag.Title = "Shop";
    Layout = "_LayoutBreadCrumbs";
}

@model CatalogViewModel
    @*<section id="advertisement">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </section>*@

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSideBar")
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_ProductItems", Model.Products)

                <paging page-model="@Model.PageViewModel"
                        page-action="Shop"
                        page-url-CategoryId="@Model.CategoryId"
                        page-url-BrandId="@Model.BrandId">

                </paging>
            </div>
        </div>
    </div>
</section>

