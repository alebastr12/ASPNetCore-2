@model EmployeeView
@{
    ViewBag.Title = "Данные о сотруднике";
}

    <a asp-controller="Employee" asp-action="Index"><i class="fas fa-arrow-left">Назад к списку сотрудников</i></a>
    <h3>Детали сотрудника:</h3>
    <table class="table">
        <tr>
            <td>ИД</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Фамилия</td>
            <td>@Model.SurName</td>
        </tr>
        <tr>
            <td>Имя</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Отчество</td>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <td>Дата рождения</td>
            <td>@Model.DateOfBirth.ToShortDateString()</td>
        </tr>
        <tr>
            <td>Должность</td>
            <td>@Model.Post</td>
        </tr>
    </table>



